<resources>

    <style name="AppBaseTheme" parent="android:Theme.Translucent">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">false</item>
        <!-- app背景-->
        <item name="android:windowBackground">@color/app_bg</item>
        <!-- APP默认颜色-->
        <item name="android:textColor">@color/white</item>
        <!-- APP默认字体大小-->
        <item name="android:textSize">@dimen/small_front</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="text_content_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textSize">@dimen/medium_front</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_next_style">
        <item name="android:onClick">next</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">下一步</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
      <style name="button_pre_style">
        <item name="android:onClick">pre</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">上一步</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="widget_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff000000</item>
    </style>
 
    <style name="my_pb_style" parent="@android:style/Widget.ProgressBar.Horizontal">
          <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>
    
    
   
    <style name="home_bottom_icon_style">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">match_parent</item>
         <item name="android:layout_weight">1</item>
          <item name="android:button">@null</item>
          <item name="android:singleLine">true</item>
          <item name="android:ellipsize">none</item>
          <item name="android:gravity">center</item>
          <item name="android:textSize">12sp</item>
          <item name="android:textColor">@android:color/white</item>
          <item name="android:background">@drawable/home_bottom_item_bg</item>
          <item name="android:paddingTop">5dp</item>
    </style>
    
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_up</item>
    </style>
    
    
    <style name="MaterialDesignStyle" parent="MD">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <!--   -->
    <style name="edittext_base_style">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">14sp</item>
    </style>

    
    
    <style name="listview_base_style">
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@color/color_gary</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:listSelector">@drawable/item_bg</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="loading_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <!-- 可以避免启动时候的短暂黑屏的问题 -->
    <style name="splash_style" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
</resources>