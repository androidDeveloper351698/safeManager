<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 内容布局 -->
    <com.dong.mobilesafe.ui.SlidFinishLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notice_layout"
        android:orientation="vertical" />

    <!-- 加载进度条布局 -->
    <ViewStub
        android:id="@+id/vs_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/part_progress_layout"/>


    <!-- 提示布局 -->
    <ViewStub
        android:id="@+id/vs_tip_layout"
        android:layout="@layout/part_tip_layout"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

</RelativeLayout>

