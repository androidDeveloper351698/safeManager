<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dong="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <com.dong.mobilesafe.ui.SettingNextItemView 
            android:id="@+id/sniv_traffic_setup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            dong:next_title = "流量套餐"
            dong:next_hint = "未设置"/>
        
        <com.dong.mobilesafe.ui.SettingItemView 
            android:id="@+id/siv_float_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            dong:title ="流量悬浮窗"/>
        
        
        
        
    </LinearLayout>
    
</ScrollView>
