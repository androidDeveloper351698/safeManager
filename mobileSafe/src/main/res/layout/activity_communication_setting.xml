<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dong="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <com.dong.mobilesafe.ui.SettingItemView 
     android:id="@+id/siv_harass"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     dong:title = "骚扰拦截"/>
    
    
    <com.dong.mobilesafe.ui.SettingItemView 
     android:id="@+id/siv_harass_tip"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     dong:title = "骚扰拦截提示"/>
    
    
    <com.dong.mobilesafe.ui.SettingNextItemView 
        android:id="@+id/sniv_harass_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        dong:next_title = "拦截模式"
        dong:next_hint = "智能拦截"/>

</LinearLayout>
